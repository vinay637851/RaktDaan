<%- include('header') %>
<style>
    .text-center{
        perspective: 100px;
    }
    .card-container {
        display: none; 
        background-color: #fff;
        border: 0px solid;
        height: 25vh;
        
        border-radius: 10px;
        box-shadow: 0 0px 10px rgba(0, 0, 0, 0.3);
        margin-top: 20px;
        padding: 20px; 
    }
    .card-container.active {
        display: block; 
    }
    .text-center{
        display: flex;
    }
    .blood-btn {
        margin: 0.5rem;
        font-weight: 600;
        border: 0px solid;
        background-color: white;
        outline: 1px solid red;
        border-radius: 1rem;
        height: 6vh;
        width: 8vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .blood-btn:hover{
        background-color: #BF222B;
        color: white;
        font-weight: 600;
        box-shadow: 0 0 20px #BF222B;
        cursor: pointer;
    }
    .blood-active{
        background-color: #BF222B;
        color: white;
        font-weight: 600;
        box-shadow: 0 0 20px #BF222B;
        cursor: pointer;
    }
    .card {
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 0px 16px lightgreen;
        transition: transform 0.3s;
        line-height: 5vh;
    }
    .card:hover {
        transform: translateZ(10px);
        box-shadow: 0 0px 24px rgb(146, 250, 146);
    }
    .card-container h3{
        color:#c0392b;
        font-size: 22px;
        transform: scale(1,1.2);
        word-spacing: 2px;
        letter-spacing: 1px;
    }
    .card-container p{
        color: #333;
        font-size: 18px;
    }
    .mb-4{
        transform: scale(1,1.2);
        letter-spacing: 2px;
    }
    .containermy-4{
        height: 60vh;
        width: 50vw;
        padding: 3vh;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }
    /* Container for the slider */
    .slider_container {
        width: 100vw;
        height: 70vh; /* Set a height for the slider */
        overflow: hidden;
        position: relative;
    }

    /* Slider holds the images */
    .slider {
        display: flex;
        width: 100vw;
        height: 70vh; /* 3 images, each 100% of container */
        transition: transform 1s ease-in-out; /* Smooth transition */
    }

   
    .slider img {
        width: 100vw;
        height: 70vh;
        object-fit: cover; 
    }

    /* Dot navigation */
    .dot-container {
        position: absolute;
        bottom: 10px;
        left: 50%;
        transform: translateX(-50%);
        display: flex;
        justify-content: center;
        gap: 10px;
        z-index: 10;
    }

    .dot {
        width: 12px;
        height: 12px;
        border-radius: 50%;
        background-color: rgba(0, 0, 0, 0.5);
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .dot.active {
        background-color: #c0392b;
    }

    .dot:hover {
        background-color: rgba(0, 0, 0, 0.7);
    }
  
</style>
